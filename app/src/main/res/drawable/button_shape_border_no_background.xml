<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
android:shape="rectangle" >

<corners
    android:bottomLeftRadius="@dimen/botton_shape_border_bottom_left_radius"
    android:bottomRightRadius="@dimen/botton_shape_border_bottom_right_radius"
    android:radius="@dimen/botton_shape_border_radius"
    android:topLeftRadius="@dimen/botton_shape_border_top_left_radius"
    android:topRightRadius="@dimen/botton_shape_border_top_right_radius" />

<solid android:color="@color/botton_shape_border_solid_color" />
<stroke
    android:width="@dimen/botton_shape_border_stroke_width"
    android:color="@color/botton_shape_border_stroke_color" />

<padding
    android:bottom="@dimen/botton_shape_border_padding_bottom"
    android:left="@dimen/botton_shape_border_padding_left"
    android:right="@dimen/botton_shape_border_padding_right"
    android:top="@dimen/botton_shape_border_padding_top" />

</shape>